block title
  title 找不到頁面
block script
  script(type="text/javascript").
      (function(){
        var pathname = window.location.pathname;
        var lang = window.navigator.userLanguage || window.navigator.language;
        if(lang != 'zh-TW') {
          lang = 'en-US';
        }
        if(pathname.match(/^\/([a-z]+\.html)$/) && pathname !== '/404.html') {
          location.href = '/' + lang + pathname;
        }
      }())

